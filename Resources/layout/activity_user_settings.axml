<?xml version="1.0" encoding="utf-8"?> 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent">

	<RelativeLayout 
		android:orientation="vertical" 
		android:isScrollContainer="true"
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:padding="20dip" 
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true">

		<ImageButton
			android:src="@drawable/btnBack"
			android:layout_width="50dp" 
			android:layout_height="50dp" 
			android:background="@android:color/transparent"
			android:id="@+id/btn_back_a" />

		<RelativeLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:id="@+id/containerUser"> 
			<ImageView 
				android:layout_width="fill_parent" 
				android:layout_height="100dp" 
				android:layout_marginBottom="20dp" 
				android:id="@+id/img_user" 
				android:src="@drawable/default_user"/> 
			<TextView 
				android:text="Имя" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/img_user" 
				android:id="@+id/label_first_name"/> 
			<TextView 
				android:text="Имя" 
				android:textSize="20dp"
				android:textColor="?android:attr/editTextColor" 
				android:layout_width="fill_parent" 
				android:layout_height="30dp" 
				android:layout_marginBottom="10dp" 
				android:layout_below="@+id/label_first_name" 
				android:id="@+id/s_first_name"/> 
			<TextView 
				android:text="Фамилия" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/s_first_name" 
				android:id="@+id/label_last_name"/> 
			<TextView 
				android:text="Фамилия" 
				android:textSize="20dp"
				android:textColor="?android:attr/editTextColor"  
				android:layout_width="fill_parent" 
				android:layout_height="30dp" 
				android:layout_marginBottom="10dp" 
				android:layout_below="@+id/label_last_name" 
				android:id="@+id/s_last_name"/> 
			<TextView 
				android:text="Отчество" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="0dp" 
				android:layout_below="@+id/s_last_name" 
				android:id="@+id/label_middle_name"/> 
			<LinearLayout 
				android:layout_width="fill_parent" 
				android:layout_marginBottom="10dp" 
				android:layout_height="40dp" 
				android:orientation="horizontal" 
				android:layout_below="@+id/label_middle_name" 
				android:id="@+id/container_middle_name" > 
				<EditText 
					android:hint="Отчество" 
					android:layout_width="0dp" 
					android:layout_weight=".85"
					android:layout_height="50dp"
					android:textSize="20dp"
					android:textColor="@android:color/black"
					android:id="@+id/s_middle_name" /> 
				<ImageButton 
					android:src="@drawable/checked" 
					android:layout_width="0dp" 
					android:layout_height="30dp" 
					android:layout_weight=".15"
					android:background="@android:color/transparent" 
					android:id="@+id/btn_save_mid" /> 
			</LinearLayout> 
			<TextView 
				android:text="Отряд" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/container_middle_name" 
				android:id="@+id/label_team"/> 
			<TextView 
				android:text="Отряд" 
				android:textSize="20dp"
				android:textColor="?android:attr/editTextColor"  
				android:layout_width="fill_parent" 
				android:layout_height="30dp" 
				android:layout_marginBottom="10dp" 
				android:layout_below="@+id/label_team" 
				android:id="@+id/s_team"/> 
			<TextView 
				android:text="Ранг" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/s_team" 
				android:id="@+id/label_rang"/> 
			<TextView 
				android:text="Ранг" 
				android:textSize="20dp"
				android:textColor="?android:attr/editTextColor" 
				android:layout_width="fill_parent" 
				android:layout_height="30dp" 
				android:layout_marginBottom="10dp" 
				android:layout_below="@+id/label_rang" 
				android:id="@+id/s_rang"/> 
			<TextView 
				android:text="Направление" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/s_rang" 
				android:id="@+id/label_section"/> 
			<TextView 
				android:text="Направление" 
				android:textSize="20dp"
				android:textColor="?android:attr/editTextColor"  
				android:layout_width="fill_parent" 
				android:layout_height="30dp" 
				android:layout_marginBottom="10dp" 
				android:layout_below="@+id/label_section" 
				android:id="@+id/s_section"/> 
			<TextView 
				android:text="Телефон" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/s_section" 
				android:id="@+id/label_number"/> 
			<TextView 
				android:text="Телефон" 
				android:textSize="20dp"
				android:textColor="?android:attr/editTextColor"  
				android:layout_width="fill_parent" 
				android:layout_height="30dp" 
				android:layout_marginBottom="10dp" 
				android:layout_below="@+id/label_number" 
				android:id="@+id/s_phone"/> 
			<TextView 
				android:text="Почта" 
				android:textAppearance="?android:attr/textAppearanceSmallInverse" 
				android:textColor="?android:attr/textColorSecondary" 
				android:layout_width="fill_parent" 
				android:layout_height="20dp" 
				android:layout_marginBottom="5dp" 
				android:layout_below="@+id/s_phone" 
				android:id="@+id/label_email" /> 
			<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_marginBottom="20dp" 
				android:layout_height="wrap_content" 
				android:orientation="horizontal" 
				android:layout_below="@+id/label_email" 
				android:id="@+id/container_email" > 
				<TextView 
					android:text="dima.star90@mail.ru" 
					android:textSize="18dp"
					android:textColor="?android:attr/editTextColor"  
					android:layout_width="210dp" 
					android:layout_height="30dp"
					android:id="@+id/s_email"/> 
				<TextView 
					android:text="(подтвер.)" 
					android:textAppearance="?android:attr/textAppearanceSmall" 
					android:textColor="@color/material_deep_teal_200"
					android:textSize="16dp"
					android:layout_width="130dp"
					android:layout_height="30dp"
					android:gravity="right"
					android:layout_toRightOf="@+id/s_email"
					android:id="@+id/s_email_check"/> 
				<TextView 
					android:text="(ожидаю)" 
					android:textAppearance="?android:attr/textAppearanceSmall" 
					android:textColor="@android:color/holo_orange_light"
					android:textSize="16dp"
					android:layout_width="80dp" 
					android:gravity="right"
					android:layout_height="30dp"
					android:layout_toRightOf="@+id/s_email"
					android:id="@+id/s_email_wait"/> 
				<TextView 
					android:text="Подтвердить"
					android:background="@color/colorMainBlue"
					android:textColor="@android:color/white"
					android:textSize="16dp"
					android:gravity="center"
					android:layout_width="120dp"
					android:layout_height="30dp"
					android:layout_below="@+id/s_email"
					android:id="@+id/btn_email_check"/> 
			</RelativeLayout>
			<Button 
				android:text="Создать отряд" 
				android:layout_width="fill_parent" 
				android:layout_height="45dp"
				android:visibility="invisible"
				android:background="@color/colorMainBlue"
				android:textColor="@android:color/white"
				android:layout_below="@+id/container_email" 
				android:id="@+id/btn_create_squad" /> 
		</RelativeLayout> 
		<Button
			android:text="Выход"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginTop="20dp"
			android:background="@color/colorMainBlue"
			android:textColor="@android:color/white"
			android:layout_below="@+id/containerUser"
			android:id="@+id/btn_exit" />
</RelativeLayout>
</ScrollView>