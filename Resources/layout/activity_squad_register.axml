<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent">

	<RelativeLayout 
		android:orientation="vertical" 
		android:isScrollContainer="true"
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:padding="20dip" 
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true">
		
		<ImageButton
			android:src="@drawable/btnBack"
			android:layout_width="50dp" 
			android:layout_height="50dp" 
			android:background="@android:color/transparent"
			android:id="@+id/btn_back_a" />
		
		<TextView
			android:text="Создать отряд"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:layout_height="30dp"
			android:layout_marginBottom="20dp"
			android:layout_below="@+id/btn_back_a"
			android:id="@+id/textHeaderTeam"/>
		<TextView
			android:text="Стань лучшим командиром!"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:layout_marginBottom="30dp" 
			android:layout_height="20dp"
			android:layout_below="@+id/textHeaderTeam"
			android:id="@+id/textlogin_desc"/>
		
		<TextView 
			android:text="Название отряда" 
			android:textAppearance="?android:attr/textAppearanceSmallInverse" 
			android:textColor="?android:attr/textColorSecondary" 
			android:layout_width="fill_parent" 
			android:layout_height="20dp" 
			android:layout_marginBottom="0dp" 
			android:layout_below="@+id/textlogin_desc" 
			android:id="@+id/label_name"/> 
		<EditText 
			android:hint="Победитель" 
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:textSize="20dp"
			android:textColor="@android:color/black"
			android:layout_below="@+id/label_name" 
			android:id="@+id/s_name" />

		<TextView 
			android:text="Описание отряда" 
			android:textAppearance="?android:attr/textAppearanceSmallInverse" 
			android:textColor="?android:attr/textColorSecondary" 
			android:layout_width="fill_parent" 
			android:layout_height="20dp" 
			android:layout_marginBottom="0dp" 
			android:layout_below="@+id/s_name" 
			android:id="@+id/label_desc"/> 
		<EditText 
			android:hint="Кто не с Нами, тот под Нами." 
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:textSize="20dp"
			android:textColor="@android:color/black"
			android:layout_below="@+id/label_desc" 
			android:id="@+id/s_desc" />
		
		<TextView 
			android:text="Город" 
			android:textAppearance="?android:attr/textAppearanceSmallInverse" 
			android:textColor="?android:attr/textColorSecondary" 
			android:layout_width="fill_parent" 
			android:layout_height="20dp" 
			android:layout_marginBottom="0dp" 
			android:layout_below="@+id/s_desc" 
			android:id="@+id/label_city"/> 
		<EditText 
			android:hint="Санкт-Петербург" 
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:textSize="20dp"
			android:textColor="@android:color/black"
			android:layout_below="@+id/label_city" 
			android:id="@+id/s_city" />

		<TextView 
			android:text="Дата основания" 
			android:textAppearance="?android:attr/textAppearanceSmallInverse" 
			android:textColor="?android:attr/textColorSecondary" 
			android:layout_width="fill_parent" 
			android:layout_height="20dp" 
			android:layout_marginBottom="0dp" 
			android:layout_below="@+id/s_city" 
			android:id="@+id/label_date"/>
		<TextView 
			android:text="Выбрать дату" 
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:textSize="20dp"
			android:textColor="@android:color/black"
			android:layout_below="@+id/label_date" 
			android:id="@+id/dt_date" />

		<TextView 
			android:text="Направление" 
			android:textAppearance="?android:attr/textAppearanceSmallInverse" 
			android:textColor="?android:attr/textColorSecondary" 
			android:layout_width="fill_parent" 
			android:layout_height="20dp" 
			android:layout_marginBottom="0dp" 
			android:layout_below="@+id/dt_date" 
			android:id="@+id/label_section"/> 
		<Spinner 
			android:spinnerMode="dialog"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:padding="5dp"
			android:layout_below="@+id/label_section" 
			android:entries="@array/a_section"
			android:id="@+id/s_section"/>

		<TextView 
			android:text="Соц. сети" 
			android:textAppearance="?android:attr/textAppearanceSmallInverse" 
			android:textColor="?android:attr/textColorSecondary" 
			android:layout_width="fill_parent" 
			android:layout_height="20dp" 
			android:layout_marginBottom="0dp" 
			android:layout_below="@+id/s_section" 
			android:id="@+id/label_social"/> 
		<EditText 
			android:hint="http://vk.com" 
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:textSize="20dp"
			android:textColor="@android:color/black"
			android:layout_below="@+id/label_social" 
			android:id="@+id/s_social" />

		<Button
			android:text="Создать"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginTop="30dp"
			android:background="@color/colorMainBlue"
			android:textColor="@android:color/white"
			android:layout_below="@+id/s_social"
			android:id="@+id/btn_create_squad" />

   </RelativeLayout>
</ScrollView>